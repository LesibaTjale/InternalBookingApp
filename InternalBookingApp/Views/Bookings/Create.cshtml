@model InternalBookingApp.Models.Entities.Booking



@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ResourceId" class="control-label">Resource</label>
        <select asp-for="ResourceId" class="form-control" asp-items="ViewBag.ResourceId"></select>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="BookedBy" class="control-label"></label>
        <input asp-for="BookedBy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Purpose" class="control-label"></label>
        <input asp-for="Purpose" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
