@model IEnumerable<InternalBookingApp.Models.Entities.Booking>


<div class="container mt-4">
    <h2>All Bookings</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add Booking</a>
    
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Resource</th>
                <th>Start</th>
                <th>End</th>
                <th>Booked By</th>
                <th>Purpose</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
@foreach (var booking in Model)
{
    <tr>
        <td>@booking.Id</td>
        <td>@booking.Resource?.Name</td>
        <td>@booking.StartTime</td>
        <td>@booking.EndTime</td>
        <td>@booking.BookedBy</td>
        <td>@booking.Purpose</td>
        <td>
            <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-danger">Delete</a>
            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-primary">Details</a>

       
        
    </tr>
}
        </tbody>
    </table>
</div>
