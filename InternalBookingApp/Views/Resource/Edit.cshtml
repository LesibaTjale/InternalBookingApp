@{
}
@model InternalBookingApp.Models.Entities.Resource


<h1> Edit Resource</h1>

@if (Model is null)
{
    <p>No resource was found with this Id</p>
}

else
{
    

 <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />


        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />


        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="description" class="form-control" asp-for="Description" />


        </div>

        <div class="mt-3">
            <label class="form-label">Location</label>
            <input type="location" class="form-control" asp-for="Location" />


        </div>

        <div class="mt-3">
            <label class="form-label">Capacity</label>
            <input type="capacity" class="form-control" asp-for="Capacity" />


        </div>


        <div class="mt-3">

            <input type="checkbox" class="form-check-input" id="IsAvailable" asp-for="IsAvailable" />
            <label class="form-check-label" for="IsAvailable">IsAvailable</label>


        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
            asp-action="Delete"
            asp-controller="Resource">Delete</button>



        </div>
    </form>
}